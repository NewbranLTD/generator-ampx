{
  "name": "generator-ampx",
  "version": "0.0.1",
  "description": "AMP (Accelerate Mobile Page) generator",
  "homepage": "https://newbran.ch",
  "author": {
    "name": "Joel Chu",
    "email": "joelckchu@gmail.com",
    "url": "joelchu.com"
  },
  "files": ["generators", "lib"],
  "main": "lib/index.js",
  "keywords": ["Node", "JS", "Javascript", "AMP", "Google", "yeoman-generator"],
  "devDependencies": {
    "nsp": "^2.6.3",
    "eslint": "^4.1.0",
    "prettier": "^1.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-config-xo": "^0.18.2",
    "jest": "^21.0.0",
    "yeoman-test": "^1.7.0",
    "yeoman-assert": "^3.1.0",
    "jest-cli": "^21.0.0"
  },
  "scripts": {
    "prepublishOnly": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest",
    "prepublish": "nsp check"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "joelchu/generator-ampx",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "dependencies": {
    "yeoman-generator": "^2.0.1",
    "chalk": "^2.1.0",
    "yosay": "^2.0.1"
  }
}
